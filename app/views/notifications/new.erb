<%= form_tag(notify_path, method: :post) do %>
  <p>
    <%= label_tag(:to, 'Recipient') %>
    <%= text_field_tag(:to, nil, type: :'email') %>
  </p>
  <p>
    <%= label_tag(:subject, 'Subject') %>
    <%= text_field_tag(:subject, nil, type: :'text') %>
  </p>
  <p>
    <%= label_tag(:body, 'Body') %>
    <%= text_area_tag(:body) %>
  </p>
  <p>
    <%= submit_tag('Submit') %>
  </p>
<% end %>
